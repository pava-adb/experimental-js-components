{
    "plugins": ["node_modules/grunt-jsdoc/node_modules/jsdoc/plugins/markdown"],
    "markdown": {
        "parser": "gfm"
    },
    "opts": {
        "recurse": true,
        "template": "doc-lib/docstrap/template",
        "tutorials": "doc-lib/tutorials"
    },    
    "templates": {
        "cleverLinks": false,
        "default": {
            "outputSourceFiles": true,
            "staticFiles": {
                "include": [
                    "./doc-lib/tutorials"
                ]
            }            
        },
        "monospaceLinks": false,
        "theme": "flatly"
    }        
}